<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When checked/selected -->
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <solid android:color="@color/gray_8" />
                    <corners android:radius="@dimen/roundedCorners" />
                    <stroke android:color="@color/gray_15" android:width="@dimen/lineThickness"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_baseline_send_enabled_24"
                android:gravity="center"/>
        </layer-list>
    </item>
    <!-- When unchecked/not selected -->
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/accent_0"/>
                    <corners android:radius="@dimen/roundedCorners"/>
                </shape>
            </item>

            <item
                android:drawable="@drawable/spinner_send_button"
                android:gravity="center"/>
        </layer-list>
    </item>
</selector>