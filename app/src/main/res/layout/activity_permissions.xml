<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Permissions">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/rubik_mono_one"
        android:textColor="@color/accent_0"
        android:gravity="center_horizontal"
        android:text="@string/permissions"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPermission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPermission"
        android:layout_width="256dp"
        android:layout_height="72dp"
        android:fontFamily="@font/rubik_mono_one"
        android:backgroundTint="@color/accent_1"
        android:textColor="@color/accent_0"
        android:text="@string/givePermissions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonUpdateAndNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:contentDescription="@string/nextButton"
        android:rotation="180"
        android:scaleType="centerCrop"
        android:scaleX="0.7"
        android:scaleY="0.6"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPermission" />

</androidx.constraintlayout.widget.ConstraintLayout>